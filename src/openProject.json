{
  "contributes": {
    "configuration": {
      "properties": {
        "vscode-textmate.openProject.useQuickPick": {
          "type": "boolean",
          "default": true,
          "description": "Use the built-in Quick Pick UI instead of the custom sidebar UI for selecting projects.",
          "scope": "machine"
        },
        "vscode-textmate.favorites": {
          "type": "array",
          "default": [],
          "description": "The folders containing projects.",
          "scope": "machine"
        }
      }
    },
    "commands": [
      {
        "title": "TextMate: Open Recent Project",
        "command": "vscode-textmate.openProject"
      }
    ],
    "keybindings": [
      {
        "key": "cmd+shift+o",
        "command": "vscode-textmate.openProject"
      }
    ]
  }
}
